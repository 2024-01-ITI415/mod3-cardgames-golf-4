<xml>
    <!-- This file holds info for laying out the Golf Solitaire card game. -->
    
    <!-- The multiplier is multiplied by the x and y attributes below. -->
    <!-- This determines how loose or tight the layout is. --> 
    <multiplier x="0.8" y="0.7" />
    
    <!-- In the XML below, id is the number of the card -->
    <!-- x and y set position -->
    <!-- faceup is 1 if the card is face-up -->
    <!-- layer sets the depth layer so cards overlap properly -->
    <!-- hiddenby is the ids of cards that keep a card face-down -->
    
    <!-- Layer0, the deepest cards. -->
    <slot id="6" x="-8" y="-5" faceup="1" layer="0" />
    <slot id="5" x="-5" y="-5" faceup="1" layer="0" />
    <slot id="4" x="-2"  y="-5" faceup="1" layer="0" />
    <slot id="3" x="1"  y="-5" faceup="1" layer="0" />
    <slot id="2" x="4" y="-5" faceup="1" layer="0" />
    <slot id="1" x="7" y="-5" faceup="1" layer="0" />
    <slot id="0" x="10" y="-5" faceup="1" layer="0" />
    
    <!-- Layer1, the next level. -->
    <slot id="13"  x="-8"  y="-3" faceup="1" layer="1" />
    <slot id="12"  x="-5"  y="-3" faceup="1" layer="1" />
    <slot id="11"  x="-2"   y="-3" faceup="1" layer="1" />
    <slot id="10" x="1"   y="-3" faceup="1" layer="1" />
    <slot id="9"  x="4"  y="-3" faceup="1" layer="1" />
    <slot id="8"  x="7"  y="-3" faceup="1" layer="1" />
    <slot id="7"  x="10"  y="-3" faceup="1" layer="1" />
    
    <!-- Layer2, the next level. -->
    <slot id="20" x="-8"  y="-1" faceup="1" layer="2" />
    <slot id="19" x="-5"  y="-1" faceup="1" layer="2" />
    <slot id="18" x="-2"   y="-1" faceup="1" layer="2" />
    <slot id="17" x="1"   y="-1" faceup="1" layer="2" />
    <slot id="16" x="4"  y="-1" faceup="1" layer="2" />
    <slot id="15" x="7"  y="-1" faceup="1" layer="2" />
    <slot id="14" x="10"  y="-1" faceup="1" layer="2" />
    
    <!-- Layer3, the next level. -->
    <slot id="27" x="-8"  y="1" faceup="1" layer="3" />
    <slot id="26" x="-5"  y="1" faceup="1" layer="3" />
    <slot id="25" x="-2"   y="1" faceup="1" layer="3" />
    <slot id="24" x="1"   y="1" faceup="1" layer="3" />
    <slot id="23" x="4"  y="1" faceup="1" layer="3" />
    <slot id="22" x="7"  y="1" faceup="1" layer="3" />
    <slot id="21" x="10"  y="1" faceup="1" layer="3" />
    
    <!-- This positions the draw pile and staggers it -->
    <slot type="drawpile" x="0" y="8" xstagger="0.15" layer="4"/>
    
    <!-- This positions the discard pile and target card -->
    <slot type="discardpile" x="10" y="8" layer="5"/>
</xml>