<xml>
    <!-- This file holds info for laying out the Golf Solitaire card game. -->
    
    <!-- The multiplier is multiplied by the x and y attributes below. -->
    <!-- This determines how loose or tight the layout is. --> 
    <multiplier x="1.25" y="1.5" />
    
    <!-- In the XML below, id is the number of the card -->
    <!-- x and y set position -->
    <!-- faceup is 1 if the card is face-up -->
    <!-- layer sets the depth layer so cards overlap properly -->
    <!-- hiddenby is the ids of cards that keep a card face-down -->
    
    <!-- Layer0, the deepest cards. -->
    <slot id="0" x="-6" y="-5" faceup="0" layer="0" hiddenby="1,2,3,4,5,6,7" />
    <slot id="1" x="-4" y="-5" faceup="0" layer="0" hiddenby="2,3,4,5,6,7" />
    <slot id="2" x="-2" y="-5" faceup="0" layer="0" hiddenby="3,4,5,6,7" />
    <slot id="3" x="0"  y="-5" faceup="0" layer="0" hiddenby="4,5,6,7" />
    <slot id="4" x="2"  y="-5" faceup="0" layer="0" hiddenby="5,6,7" />
    <slot id="5" x="4"  y="-5" faceup="0" layer="0" hiddenby="6,7" />
    <slot id="6" x="6"  y="-5" faceup="0" layer="0" hiddenby="7" />
    
    <!-- Layer1, the next level. -->
    <slot id="7" x="-6" y="-3" faceup="0" layer="1" hiddenby="8,9,10,11,12,13,14" />
    <slot id="8" x="-4" y="-3" faceup="0" layer="1" hiddenby="9,10,11,12,13,14" />
    <slot id="9" x="-2" y="-3" faceup="0" layer="1" hiddenby="10,11,12,13,14" />
    <slot id="10" x="0"  y="-3" faceup="0" layer="1" hiddenby="11,12,13,14" />
    <slot id="11" x="2"  y="-3" faceup="0" layer="1" hiddenby="12,13,14" />
    <slot id="12" x="4"  y="-3" faceup="0" layer="1" hiddenby="13,14" />
    <slot id="13" x="6"  y="-3" faceup="0" layer="1" hiddenby="14" />
    
    <!-- Layer2, the next level. -->
    <slot id="14" x="-6" y="-1" faceup="0" layer="2" hiddenby="15,16,17,18,19,20" />
    <slot id="15" x="-4" y="-1" faceup="0" layer="2" hiddenby="16,17,18,19,20" />
    <slot id="16" x="-2" y="-1" faceup="0" layer="2" hiddenby="17,18,19,20" />
    <slot id="17" x="0"  y="-1" faceup="0" layer="2" hiddenby="18,19,20" />
    <slot id="18" x="2"  y="-1" faceup="0" layer="2" hiddenby="19,20" />
    <slot id="19" x="4"  y="-1" faceup="0" layer="2" hiddenby="20" />
    <slot id="20" x="6"  y="-1" faceup="0" layer="2" />
    
    <!-- Layer3, the top level. -->
    <slot id="21" x="-6" y="1" faceup="0" layer="3" />
    <slot id="22" x="-4" y="1" faceup="0" layer="3" />
    <slot id="23" x="-2" y="1" faceup="0" layer="3" />
    <slot id="24" x="0"  y="1" faceup="0" layer="3" />
    <slot id="25" x="2"  y="1" faceup="0" layer="3" />
    <slot id="26" x="4"  y="1" faceup="0" layer="3" />
    <slot id="27" x="6"  y="1" faceup="0" layer="3" />
    
    <!-- This positions the draw pile and staggers it -->
    <slot type="drawpile" x="-4" y="4" xstagger="0.15" layer="4"/>
    
    <!-- This positions the discard pile and target card -->
    <slot type="discardpile" x="4" y="4" layer="5"/>
</xml>
